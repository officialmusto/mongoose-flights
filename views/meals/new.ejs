<h1>Add Meal</h1>

  <form action="/flights/<%= flight._id %>/meals" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>

    <button type="submit">Add Meal</button>
  </form>

  <h2>Current Meals:</h2>

  <ul>
    <% meals.forEach(meal => { %>
      <li><%= meal.name %></li>
    <% }) %>
  </ul>





