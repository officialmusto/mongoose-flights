<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/forms.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="airline-input">Airline:</label>
    <input type="text" placeholder='"Southwest"' name="airline" id="airline-input">
    <label for="airport-input">Airport:</label>
    <input type="text" placeholder='"LAX"' name="airport" id="airport-input">
    <label for="flightNo-select">Flight No:</label>
    <input type="number" placeholder='1 - 9999' name="flightNo" id="flightNo-input">
    <label for="departs-input">Departure Date:</label>
    <input type="text" placeholder='"MM.DD.YYYY"' name="departs" id="departs-input">
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>